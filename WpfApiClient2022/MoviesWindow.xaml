<Window x:Class="WpfApiClient2022.MoviesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApiClient2022"
        xmlns:vm="clr-namespace:WpfApiClient2022.ViewModels"
        mc:Ignorable="d"
        Title="MoviesWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate x:Key="MovieItem">
            <StackPanel>
                <TextBlock Text="{Binding title}" />
                <TextBlock Text="{Binding description}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>

        <DataGrid ItemsSource="{Binding ActorMovies}"  ItemTemplate="{StaticResource ResourceKey=MovieItem}" AutoGenerateColumns="True" Margin="127,70,127,69"></DataGrid>
    </Grid>
</Window>
